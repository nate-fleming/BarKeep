@model IEnumerable<BarKeep.Models.Cocktail>

@{
    ViewData["Title"] = "Index";
}

    <div class="btn-group btn-group-toggle">
        <a type="button" class="btn btn-primary active" asp-action="Index">All Cocktails</a>
        <a type="button" class="btn btn-primary" asp-action="MyCocktails">My Cocktails</a>
        <a type="button" class="btn btn-primary" asp-action="Index">Favorite Cocktails</a>
    </div>

<h1>All Cocktails</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Source)
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AlcoholTypeSortParm"]">@Html.DisplayNameFor(model => model.AlcoholType)</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.FullName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.ImgUrl)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Source)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AlcoholType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            @*<td>
                <img style="height: 40px; width: auto; display: block;" src="@Html.DisplayFor(modelItem => item.ImgUrl)" alt="Card image">
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.CocktailId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CocktailId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CocktailId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
